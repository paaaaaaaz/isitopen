<h1>Listing businesses</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th>Morning</th>
      <th>Lunch</th>
      <th>Afternoon</th>
      <th>Night</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   
    <%= link_to 'New Business', new_business_path %>

    <% @businesses.each do |business| %>
      
      <tr>
        <td><%= business.category.name unless business.category.nil? %></td>
        <td><%= business.name %></td>
        <td><%= link_to "Maps", business.description %></td>
        <td><%= image_tag(business.picture_url, :width => 120) if business.picture.present? %></td>
        <td><%= business.open(business.morning) %></td>
        <td><%= business.open(business.lunch) %></td>
        <td><%= business.open(business.afternoon) %></td>
        <td><%= business.open(business.night) %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Delete', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

